---
const { title = "Saachi K Gupta", showHero = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
      }

      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 24px 40px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.06);
      }

      .name {
        font-size: 40px;
        font-weight: 500;
      }

      .hero img {
        width: 100%;
        height: 80vh;
        object-fit: cover;
        display: block;
      }

      nav.icons {
        display: flex;
        align-items: center;
        gap: 18px;
        flex-wrap: wrap;
        justify-content: flex-end;
      }

      nav.icons a {
        color: black;
        display: flex;
        align-items: center;
        text-decoration: none;
      }

      nav.icons a:hover {
        opacity: 0.6;
        transform: translateY(-1px);
      }

      /* these are your text links (Home/Builds/etc) */
      nav.icons .home {
        font-size: 18px;
        margin-right: 8px;
      }

      /* --- Content typography + rhythm --- */
      main {
        padding: 40px;
        max-width: 900px;
        width: 100%;
        margin: 0 auto;
        font-size: 16px;
        line-height: 1.6;
      }

      main h1 {
        margin: 0 0 14px;
        line-height: 1.2;
      }

      main h2 {
        margin: 28px 0 12px;
        line-height: 1.25;
      }

      main p {
        margin: 0 0 14px;
      }

      /* --- Images + figures: treat screenshots like designed cards --- */
      main img {
        display: block;
        width: 100%;
        max-width: 100%;
        height: auto;
      }

      main figure {
        margin: 16px 0 22px;
        padding: 14px;
        border: 1px solid rgba(0, 0, 0, 0.10);
        border-radius: 14px;
        background: rgba(0, 0, 0, 0.015);
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.08);
      }

      main figure + figure {
        margin-top: 16px;
      }

      main figure img {
        border-radius: 10px;
        box-shadow: none; /* shadow belongs to the card */
      }

      /* Optional: crop super-wide screenshots so they feel less overwhelming.
         If you don't want cropping, delete the next 4 lines. */
      /*
      main figure img {
        max-height: 520px;
        object-fit: cover;
        object-position: top;
      }
      */

      main figcaption {
        margin-top: 10px;
        font-size: 0.92rem;
        line-height: 1.4;
        color: rgba(0, 0, 0, 0.75);
      }

      @media (max-width: 640px) {
        header {
          padding: 16px 18px;
        }

        .name {
          font-size: 18px;
        }

        .hero img {
          height: 55vh;
        }

        /* keep the page links visible on mobile (your choice A) */
        nav.icons .home {
          display: inline;
          font-size: 14px;
          margin-right: 0;
        }

        main {
          padding: 22px 18px;
        }
      }
    </style>
  </head>

  <body>
    <header>
      <div class="name">Saachi K. Gupta</div>

      <nav class="icons">
        <!-- Site pages -->
        <a href="/" class="home">Home</a>
        <a href="/builds" class="home">Builds</a>
        <a href="/learnings" class="home">Learnings</a>
        <a href="/reflections" class="home">Reflections</a>
        <a href="/adventures" class="home">Adventures</a>

        <!-- Social icons -->
        <a
          href="https://www.linkedin.com/in/saachi-gupta/"
          aria-label="LinkedIn"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg viewBox="0 0 24 24" width="24" height="24">
            <path
              fill="currentColor"
              d="M4.98 3.5a2.5 2.5 0 1 0 .02 5a2.5 2.5 0 0 0-.02-5ZM3 9h4v12H3zm7 0h3.8v1.7h.05c.5-.9 1.7-1.8 3.5-1.8 3.8 0 4.5 2.5 4.5 5.7V21h-4v-5.3c0-1.3 0-3-1.9-3s-2.1 1.4-2.1 2.9V21H10z"
